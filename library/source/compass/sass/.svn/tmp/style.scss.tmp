/* Imports --------------------------------------------------------------*/

@import 'nicholls-sprites';
@import "base";
/* @import 'defaults'; */

/* Layouts */

/* 
Column Notes
.5 width = 1.313
.25 width = .6565
*/

$total-columns: 26; 
$column-width: 1.423em;
$gutter-width: .88em;
$grid-padding: 0;
$show-grid-backgrounds: $show_grids;

/*
Make Static or Magic
*/
$container-style: static;

/* Layout - Default breakpoint is 945 */

.header-nicholls-wrapper- {
	background: #2d2d2d;
	background-image: url( 'library/images/backgrounds/bg-pattern-n-rectangles-grey-dark.png' );	
}

.header-nicholls- {
	background-image: none;
	height: auto;
}

.notice {
	background-color: yellow;
}

.flex-active-slide img {
	float: left;
}

.flex-caption {
	float: left;
	color: #fff;
    margin-top: -6.8em;
}

.flex-caption a, .flex-caption a:link, .flex-caption a:visited, .flex-caption a:active {
	color: #fff;
}

.flex-caption-title {
	text-shadow: 1px 1px 1px black;
    margin: .2em 0;
    padding: .4em;
    color: #fff;
    background: transparent url( 'library/images/backgrounds/bg-transparent-black-60.png' );      	
}

.flex-caption-title a {
	text-decoration: none;
}

.flex-caption-content {
    margin: .2em .4em;
    padding: .4em;
    background: transparent url( 'library/images/backgrounds/bg-transparent-black-60.png' );      
}

/* START - Nicholls Home Menu */

.nicholls-home-list-container- {	
	text-align: left;
	clear: both;
	position: relative;
	z-index: 1001;
}

.nicholls-home-list-container- .nicholls-home-list- {
	list-style-type: none;
	list-style-position: inside;	
	clear: both;
	margin: 0;
	padding: 0;
}

.nicholls-home-list-container- .nicholls-home-list- .nicholls-home-list-item {
	list-style-type: none;
	list-style-position: inside;
	padding: 0;
	float: left;
	font-weight: 600;	
	color: $nicholls-color-red;
	display: block;
	width: 13%;
	text-align: center;
	margin-left: .5em;
}

.nicholls-home-apply-link- {
	@include nicholls_home_icon('red-apply');
}

.nicholls-home-calendar-link- {
	@include nicholls_home_icon('red-calendar');
}

.nicholls-home-explore-link- {
	@include nicholls_home_icon('red-explore');
}

.nicholls-home-finaid-link- {
	@include nicholls_home_icon('red-financial-aid');
}

.nicholls-home-majors-link- {
	@include nicholls_home_icon('red-majors');
}

.nicholls-home-tour-link- {
	@include nicholls_home_icon('red-tour');
}

.nicholls-home-social-link- {
	@include nicholls_home_icon('red-social');
}

